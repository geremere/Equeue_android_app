<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_create_queue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/createQueueImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/queue_default_image_24" />

        <EditText
            android:id="@+id/queueAddressInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:hint="Enter address of queue"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/queueNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:hint="Enter name of Queue"
            android:inputType="text"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/queueServiceTimeInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:hint="Enter average service time in seconds"
            android:inputType="number"
            android:textColor="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Create Queue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/createQueueButton"/>


    </LinearLayout>
</RelativeLayout>